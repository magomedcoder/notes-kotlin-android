<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="FabShapeAppearance" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerSize">12dp</item>
    </style>

    <style name="AppSearchView" parent="Widget.AppCompat.SearchView">
        <item name="android:textColorHint">@color/darker_gray</item>
        <item name="android:editTextColor">@color/black</item>
        <item name="android:textSize">20sp</item>
        <item name="colorControlActivated">@color/secondary</item>
        <item name="android:tint">@color/black</item>
    </style>

    <style name="Headline">
        <item name="android:fontFamily">@font/quattrosento_sans_bold</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Headline.h1" parent="Headline">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="Headline.h2" parent="Headline">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="Body">
        <item name="android:fontFamily">@font/quattrosento_sans_regular</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Body.b1">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Secondary">
        <item name="android:fontFamily">@font/quattrosento_sans_regular</item>
        <item name="android:textColor">@color/secondary</item>
    </style>

    <style name="Secondary.b1">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TitleTextStyling">
        <item name="android:textColorHint">@color/darker_gray</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/quattrosento_sans_regular</item>
        <item name="android:textSize">40sp</item>
    </style>

    <style name="ContentTextStyling">
        <item name="android:textColorHint">@color/darker_gray</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/quattrosento_sans_regular</item>
        <item name="android:textSize">20sp</item>
    </style>

</resources>